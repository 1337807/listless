<div class='container list'>
  <h1><%= @list.name %></h1>

  <% @items.each do |item| %>
    <%= link_to item.url do %>
      <div class='col-md-5'>
        <%= panel title: item.name do %>
          <span class='item-url'><%= truncate(item.url, length: 50) %></span>
          <span class='item-price right'>$<%= item.price %></span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
