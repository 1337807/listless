<div class='container lists'>
  <h2>Your lists</h2>

  <% @lists.each do |list| %>
    <div class='row'>
      <div class='col-md-5'>
        <%= link_to list_path(list), class: 'list-name' do %>
          <%= panel list.name %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-5'>
      <%= link_to 'Create a list', new_list_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
