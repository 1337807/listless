<%= navbar do %>
  <%= vertical do %>
    <%= link_to 'Listless', root_path %>
  <% end %>

  <%= horizontal do %>
    <%= nav class: 'navbar-right' do %>
      <% if current_user %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', new_user_session_path %>
