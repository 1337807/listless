<%= navbar do %>
  <%= vertical do %>
    <%= link_to raw("<i class='glyphicon glyphicon-list-alt home'></i> Listless"), root_path %>
  <% end %>

  <%= horizontal do %>
    <%= nav class: 'navbar-right' do %>
      <% if current_user %>
        <%= link_to raw("<i class='glyphicon glyphicon-list-alt'></i> Lists"), lists_path %>
        <%= link_to raw("<i class='glyphicon glyphicon-log-out'></i> Sign out of #{current_user.email}"), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), id: 'google_auth' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
